<div class="container">
  <% @posts.each do |post| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-2">
        <div class="card text-center shadow mb-2 bg-white rounded">
          <div class="card body">
            <h5 class="card-title"><%= link_to post.title, post_path(post), 
                                               class: 'link-dark text-decoration-none' %></h5>
            <p class="card-text">A sample &#8677 <%= post.body.truncate(20) %></p>
            <div class="card-footer bg-transparent">
              <%= link_to "View", post_path(post), class: "btn btn-outline-success btn-sm" %>
              <%= link_to "Edit", edit_post_path(post), class: "btn btn-outline-primary btn-sm" %>
              <%= link_to "Delete", post_path(post), 
                                    class: "btn btn-outline-danger btn-sm",
                                    data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
            </div>       
            <ul class="card-footer small mt-1 mb-1">
              Created <%=time_ago_in_words(post.created_at)%> ago.
              Edited <%=time_ago_in_words(post.updated_at)%> ago.
            </ul>
        </div>
      </div>
    </div>
  <% end %>
</div>

