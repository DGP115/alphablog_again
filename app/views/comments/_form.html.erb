<%= form_with model: [ @post, @post.comments.build ], local: true do |f| %>
  <%= f.hidden_field :post_id %>
  <%= f.hidden_field :user_id, value: current_user.try(:id) %>

  <div class="col-12">
    <div class="card text-center shadow mb-2 bg-white rounded">
      <div class="card-header mt-2">
        <%= f.label :body, "Care to Comment?"  %>
      </div>
      <div class="card-body">
        <%= f.text_area :body, rows:"2", class: "form-control shadow rounded mb-2"%>
        <%= f.submit "Submit", class: "btn btn-outline-primary" %>
      </div>
    <div>
  </div>

<% end %>
